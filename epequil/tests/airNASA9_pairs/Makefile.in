#!/bin/sh

# addition to suffixes
.SUFFIXES : .d

# the name of the executable program to be created
PROG_NAME = airNASA9_pairs

TESTNAME = $(PROG_NAME)

TOPDIR = @abs_top_srcdir@

BLESSED_FILES = output_blessed.txt

DATA = problem_setup.sh

TEST_RESULTS = output.txt

TEST_FLAGS = runGood runBad runInProgress.txt

TEST_INTERMEDIATES =   diff_summary.txt  diff_out.txt err_out.txt


# the object files to be linked together. List those generated from Fortran
# and from C/C++ separately
OBJS = airNASA9_pairs.o

# This link is to Cantera's install space
CT_INCROOT=@ct_incroot@

# Bring in the Zuzax includes through the .mak file
include $(CT_INCROOT)/zuzax/Zuzax.mak

# Define the include directories
INCLUDE_DIRS =  $(ZUZAX_TOTAL_INCLUDES)

# the C++ compiler
CXX = @CXX@

# C++ compile flags
CXX_FLAGS = @CXXFLAGS@ $(INCLUDE_DIRS)

# Ending C++ linking libraries
LCXX_END_LIBS = @LCXX_END_LIBS@

# flags passed to the C++ compiler/linker for the linking step
LCXX_FLAGS = @CXXFLAGS@

# Program Name
PROGRAM = $(PROG_NAME)$(EXE_EXT)

all: $(PROGRAM) airNASA9_pairs_300 .dependsT

# How to compile C++ source files to object files
.cpp.o:
	$(CXX) -c $< $(CXX_FLAGS)

# How to compile the dependency file
.cpp.d:
	@CXX_DEPENDS@ $(CXX_FLAGS) $*.cpp > $*.d

# List of dependency files to be created
DEPENDS=$(OBJS:.o=.d)  airNASA9_pairs_300.d

$(DEPENDS): Makefile

$(OBJS): Makefile

$(PROGRAM): $(OBJS) $(ZUZAX_CORE_LIBS_DEP)
	$(CXX) -o $(PROGRAM) $(OBJS) $(LCXX_FLAGS) \
                  $(ZUZAX_TOTAL_LIBS)\
                  $(LCXX_END_LIBS)

airNASA9_pairs_300: airNASA9_pairs_300.o $(ZUZAX_CORE_LIBS_DEP)
	$(CXX) -o airNASA9_pairs_300 airNASA9_pairs_300.o $(LCXX_FLAGS)  \
                  $(ZUZAX_TOTAL_LIBS) \
                  $(LCXX_END_LIBS)

# depends target -> forces recalculation of dependencies
depends:
	$(RM) *.d .depends
	@MAKE@ .dependsT

.dependsT: $(DEPENDS)
	cat *.d > .depends
	touch .dependsT

# Do the test -> For the windows vc++ environment, we have to skip checking on
#                whether the program is uptodate, because we don't utilize make
#                in that environment to build programs.


test: 
	@$(MAKE) -s all
	@echo -n 'Checking need to run test ' $(TESTNAME) ': '
	@$(MAKE) -q -s  runGood ; ss=$$? ; if test $$ss = "0" ; then echo '   NOT NEEDED' ; else  gmake -s runGood ; fi


runGood: $(PROGRAM) $(DATA) Makefile $(BLESSED_FILES)
	@echo 'RUNNING TEST ' $(TESTNAME)
	$(TOPDIR)/bin/runtest_Exec


rebaseline:
	cp output.txt output_blessed.txt

clean:
	$(RM) $(OBJS) *.o $(PROGRAM) $(DEPENDS) .depends airNASA9_pairs_300 .dependsT $(TEST_FLAGS)

clean_test:
	rm -f $(TEST_RESULTS) $(TEST_INTERMEDIATES) $(TEST_FLAGS)

clean_test_flags:
	rm -f $(TEST_FLAGS)

clean_dist: 
	$(MAKE) clean
	$(MAKE) clean_test

#############################################################################
#          DEPENDS RULES
##############################################################################

ifeq ($(wildcard .depends), .depends)
include .depends
endif



<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   
  <!-- phase li_liquid_surface   -->
  <phase dim="2" id="cathode_surface">
    <elementArray datasrc="elements.xml"> Li E </elementArray>
    <speciesArray datasrc="#species_Li_electrode"> li_site </speciesArray>
  
    <state>
      <temperature units="K"> 300.0 </temperature>
      <coverages> li_site:1.0 </coverages>
    </state>
    <thermo model="Surface">
      <site_density units="mol/cm2"> 3e-09 </site_density>
    </thermo>
    <kinetics model="Interface"/>
    <reactionArray datasrc="#data_LiElectrode"/>

    <transport model="None"/>
    <phaseArray> metal_Li_LiIon_electrons ECDMC_LiPF6 LiCoO2_Interstitials_cathode </phaseArray>
  </phase>


 <!-- species definitions     -->
  <speciesData id="species_Li_electrode">


   <!-- species li_site   -->
    <species name="li_site">
      <atomArray>  </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">298.15</t0>
           <h0 units="kJ/mol">0.0</h0>
           <s0 units="J/mol/K">0.0</s0>
           <cp0 units="J/mol/K">0.0</cp0>
        </const_cp>
      </thermo>
    </species>

  </speciesData>

 <reactionData id="data_LiElectrode">

  <!--
       Lumped reaction on the LiCoO2 electrode
    -->
    <reaction reversible="yes" type="ButlerVolmer_NoActivityCoeffs" id="0001">
      <equation> LiCoO2 [=] Li+  + electron_Li_LiIon + CoO2 </equation>
      <rateCoeff type="ExchangeCurrentDensity" >
         <electrochem beta="0.5"/>
         <Arrhenius_ExchangeCurrentDensity>
            <!--  The answer for this is that it should be 1.7395E-4 amps m-2 at 298.15K. And the
                activation energy is E/R = 4000 K. dualfoil almost always uses 4000 K as the
                default activation energy.
            -->
           <A>800.E4 </A>
           <b>0.0</b>
           <E units="kJ/mol"> 33.25788 </E>
         </Arrhenius_ExchangeCurrentDensity>
      </rateCoeff>
      <reactants> LiCoO2:1.0 </reactants>
      <products> Li+:1.0  electron_Li_LiIon:1.0 CoO2:1.0 </products>
    </reaction>


  </reactionData>

</ctml>

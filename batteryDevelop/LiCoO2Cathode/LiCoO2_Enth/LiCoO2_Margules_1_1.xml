
<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   

  <phase dim="3" id="LiCoO2_Margules_1">
    <elementArray datasrc="elements.xml">
       Li Co  O
    </elementArray>
    <speciesArray datasrc="#species_LiCoO2"> 
        LiCoO2 CoO2
    </speciesArray>
    <thermo model="Margules">
      <activityCoefficients model="Margules" TempModel="constant">
         <binaryNeutralSpeciesParameters speciesA="LiCoO2" speciesB="CoO2">
            <excessEnthalpy model="poly_Xb" terms="1" units="J/kmol">
                0.0, 0.0
            </excessEnthalpy>
            <excessEntropy  model="poly_Xb" terms="1" units="J/kmol/K">
                   9.3305E4, 0.0
            </excessEntropy>
          </binaryNeutralSpeciesParameters>
       </activityCoefficients> 
       <density units="kg/m3"> 1.0 </density>
    </thermo>
    <kinetics model="none"/>
    <state>
       <temperature> 298.15 </temperature>
       <pressure units="atm"> 1.0 </pressure>
       <moleFractions> 
         LiCoO2:0.676  CoO2:0.324 
       </moleFractions>
    </state>
  </phase>

  <!-- species definitions     -->
  <speciesData id="species_LiCoO2">


    <species name="LiCoO2">
      <atomArray> Li:1 Co:1 O:2 </atomArray>
      <thermo>     
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">298.14999999999998</t0>
           <!--  Adjustment to um_li = 0.0 basis -->
           <!-- <h0 units="kJ/mol">     -397.7317 </h0> -->
           <!--  Adjustment to H_li = 0.0 basis is below -->
           <!--     um_Li = -8.6716957869369e+06 -->
           <!--  Absolute value of H298 is based on number from Abe,Koyama, 2011 for O3-LiCoO2) 
                 In their table 2.  -->
           <h0 units="kJ/mol">    -680.93 </h0>
           <s0 units="J/mol/K">   43.31   </s0>
           <cp0 units="J/gmol/K"> 70.0  </cp0>
        </const_cp>
      </thermo>
      <standardState  model="constant_incompressible">
          <!--  Based on a density of 5.01 gm cm-3 for CoO2 -->
          <molarVolume units="m3/kmol"> 0.019447544 </molarVolume>
      </standardState>
    </species>
   
    <species name="CoO2">
      <!-- 
          Adjust to h298 is based on absolute number for LiCoO2, listed above.
          Then, we adjust h0 for CoO2 so that voltage at x =0.76 = 3.93214 volts, given
          all the other numbers.
      -->
      <atomArray>  Co:1 O:2 </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">298.14999999999998</t0>
           <h0 units="kJ/mol">    -288.5262   </h0>
           <s0 units="J/mol/K">   -0.5   </s0>
           <cp0 units="J/gmol/K"> 45.0   </cp0>
        </const_cp>
      </thermo>
      <standardState  model="constant_incompressible">
          <!--  Based on a density of 5.01 gm cm-3 for CoO2 -->
          <molarVolume units="m3/kmol"> 0.01947544 </molarVolume>
      </standardState>
    </species>


  </speciesData>

</ctml>

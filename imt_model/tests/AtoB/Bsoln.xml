<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>

  <!--    -->
  <phase dim="3" id="Bsoln(l)">
    <elementArray datasrc="elements.xml">
      H O Fe
    </elementArray>
    <speciesArray datasrc="#BSolution">
        BSolvent BSolute
    </speciesArray>
    <thermo model="IdealSolnVPSS"   >
    </thermo>
    <transport model="none"/>
    <kinetics model="none"/>
    <state>
       <temperature> 350.0 </temperature>
       <pressure units="atm"> 1.0 </pressure>
       <moleFractions> BSolvent:0.8 BSolute:0.2  </moleFractions>
    </state>
    <standardConc model="unity" />

  </phase>

 <!-- species definitions     -->
  <speciesData id="BSolution">

    <!-- species FeS(B)   -->
    <!--      melting temperature = 1463 K -->
    <species name="BSolvent">
      <atomArray> H:2 O:1 </atomArray>
     <standardState  model="constant_incompressible">
       <molarVolume> 0.02 </molarVolume>
     </standardState>
      <thermo> 
        <const_cp Tmax="10000" Tmin="100" P0="1E5">
        <t0> 298.15 </t0>
        <h0> 1.0 </h0>
        <cp0> 1.0 </cp0>
        <s0> 1.0 </s0>
        </const_cp>
      </thermo>
    </species>

    <species name="BSolute">
      <atomArray> Fe:1  </atomArray>
     <standardState  model="constant_incompressible">
       <molarVolume> 0.02 </molarVolume>
     </standardState>
      <thermo>
        <const_cp Tmax="10000" Tmin="100" P0="1E5">
        <t0> 298.15 </t0>
        <h0> 1.0E4 </h0>
        <cp0> 1.0E4 </cp0>
        <s0> 1.0E4 </s0>
        </const_cp>
      </thermo>

    </species>

  </speciesData>

</ctml>

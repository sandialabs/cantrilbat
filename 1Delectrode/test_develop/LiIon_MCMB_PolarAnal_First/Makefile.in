.SUFFIXES: .d

PROGRAM = LiIon_PorousBat
TEST_NAME = LiIon_MCMB_LiCoO2_collectors

DATA =  \
ECsoln_ion.xml  LiCoO2Cathode_electrode.xml  LiCoO2_Margules_1.xml  Li_Metal.xml\
MCMBAnode_electrode.xml  MCMB_RedlichKister.xml  metal_Li_LiIon_electrons.xml  MgO.xml 


BLESSED_FILES = \
BulkDomain1D_0_blessed.dat  BulkDomain1D_2_blessed.dat  SurDomain1D_0_blessed.dat  SurDomain1D_2_blessed.dat  timeDep_IV_blessed.dat \
BulkDomain1D_1_blessed.dat  solution_blessed.xml        SurDomain1D_1_blessed.dat  SurDomain1D_3_blessed.dat

TEST_FLAGS = runGood runBad runInProgress.txt

TEST_INTERMEDIATES = diff_out.txt err_out.txt

TEST_RESULTS = out.txt SurDomain1D_0.dat SurDomain1D_1.dat SurDomain1D_2.dat SurDomain1D_3.dat timeDep_IV.dat \
              solution.xml BulkDomain1D_0.dat  BulkDomain1D_1.dat  BulkDomain1D_2.dat Capacity_Starting.dat \
              solution_multiBulk.dat  


INPUT_FILES = anode.inp  cathode.inp  LiIon_PorousBat.inp

##########################################################################
#           Setup The Zuzax Directory locations
#########################################################################

PROGRAM_ORIGIN = ../../src_LiIon_PorousBat/$(PROGRAM)

PURIFY=@PURIFY@

# These links are to Cantera's install space
CT_INCROOT =  @ct_incroot@

#
# Bring in the Zuzax includes through the .mak file
#
include $(CT_INCROOT)/zuzax/Zuzax.mak

all: $(PROGRAM)

doTest:
	@/bin/rm -f runGood
	$(MAKE) test

$(PROGRAM): $(PROGRAM_ORIGIN)
	/bin/rm -f $(PROGRAM)
	/bin/ln -s $(PROGRAM_ORIGIN) $(PROGRAM)

test:
	@$(MAKE) -s
	@echo -n 'Checking need to run test $(TEST_NAME): '
	@/bin/rm -f runBad
	@$(MAKE) -q -s  runGood ; ss=$$? ; if test $$ss = "0" ; then echo '   NOT NEEDED' ; else  $(MAKE) -s  runGood ; fi

runGood: $(PROGRAM_ORIGIN) $(PROGRAM) $(DATA) Makefile $(BLESSED_FILES)
	@echo 'RUNNING TEST ' $(TEST_NAME)
	( export XMLSOLNDIFF=../../src_test/xmlSolnDiff ; ../../test_suite/runtest)

rebaseline:
	./rebaseline.sh


# Clean up files, but don't touch test suite results
clean:
	$(RM)  $(TEST_FLAGS) $(TEST_INTERMEDIATES)

# clean up all output from the test
test_clean:
	$(RM) $(TEST_FLAGS) $(TEST_INTERMEDIATES) $(TEST_RESULTS) $(PROGRAM) 

clean_test:
	$(RM) $(TEST_FLAGS) $(TEST_INTERMEDIATES) $(TEST_RESULTS) $(PROGRAM) 

# switch directory back to pristine condition
clean_dist:
	$(MAKE) clean_test


.SUFFIXES: .d

PROGRAM = LiIon_PorousBat
TEST_NAME = CAEBAT_restart_cycle

DATA =   ECsoln_ion.xml  LiCoO2Cathode_electrode.xml  LiCoO2_Margules_1.xml  Li_Metal.xml\
         MCMBAnode_electrode.xml  MCMB_RedlichKister.xml  metal_Li_LiIon_electrons.xml  MgO.xml 

BLESSED_FILES = accumulatedHeatSource1_blessed.txt accumulatedHeatSource2_blessed.txt accumulatedHeatSource3_blessed.txt \
                solutionStartEnd1_blessed.xml solutionStartEnd2_blessed.xml solutionStartEnd3_blessed.xml

INPUT_FILES = anode.inp  cathode.inp  LiIon_PorousBat.inp  LiIon_PorousBat.inp.tmpl runOnce.sh

TEST_INTERMEDIATES = diff_a1.txt diff_a2.txt diff_a3.txt diff_e1.txt diff_e2.txt diff_e3.txt \
                     diff_su0.txt diff_su1.txt diff_su2.txt diff_su3.txt diff_td.txt \
                     diff_xml1.txt diff_xml2.txt diff_xml3.txt err_out.txt

TEST_RESULTS =  SurDomain1D_0.dat SurDomain1D_1.dat SurDomain1D_2.dat  timeDep_IV.dat   solution_multiBulk.dat \
              solution.xml BulkDomain1D_0.dat  BulkDomain1D_1.dat  BulkDomain1D_2.dat Capacity_Starting.dat \
              runGood runBad runInProgress.txt runFinished.txt   stepwiseHeatSource.txt \
              stepwiseElectricalOutput_blessed.txt stepwiseElectricalOutput.txt stepwiseHeatSource_blessed.txt \
              out.txt accumulatedHeatSource.txt accumulatedElectricalOutput1.txt \
              accumulatedElectricalOutput2.txt accumulatedElectricalOutput3.txt accumulatedElectricalOutput.txt

TEST_FLAGS = runBad runGood runInProgress.txt  runFinished.txt


##########################################################################
#           Setup The Zuzax Directory locations
#########################################################################

PROGRAM_ORIGIN = ../../src_LiIon_PorousBat/$(PROGRAM)

PURIFY=@PURIFY@

# These links are to Cantera's install space
CT_INCROOT =  @ct_incroot@

#
# Bring in the Zuzax includes through the .mak file
#
include $(CT_INCROOT)/zuzax/Zuzax.mak

all: $(PROGRAM)

$(PROGRAM): $(PROGRAM_ORIGIN)
	/bin/rm -f $(PROGRAM)
	/bin/ln -s $(PROGRAM_ORIGIN) $(PROGRAM)

depends:
	$(RM) $(DEPENDS)
	$(MAKE) .depends

.depends:
	touch .depends

test:
	@$(MAKE) -s
	@echo -n 'Checking need to run test $(TEST_NAME): '
	@ if test -f runBad ; then /bin/rm -rf runGood ; fi
	@$(MAKE) -q -s  runGood ; ss=$$? ; if test $$ss = "0" ; then echo '   NOT NEEDED' ; else  $(MAKE) -s  runGood ; fi

runGood: $(PROGRAM_ORIGIN) $(PROGRAM) $(DATA) Makefile $(BLESSED_FILES) $(INPUT_FILES)
	@echo 'RUNNING TEST ' $(TEST_NAME)
	( export XMLSOLNDIFF=../../src_test/xmlSolnDiff ; ./runtest)

rebaseline:
	./rebaseline

#############################################################################
#          INSTALL RULES
##############################################################################

ifeq ($(wildcard .depends), .depends)
include .depends
endif

# Clean up temporary files, but don't touch test run results
clean:
	$(RM) runInProgress.txt runFinished.txt

# Clean up all output from the test run
test_clean:
	$(RM) SurDomain1D_0.dat SurDomain1D_1.dat SurDomain1D_2.dat  timeDep_IV.dat \
	      solution.xml BulkDomain1D_0.dat  BulkDomain1D_1.dat  BulkDomain1D_2.dat \
	      runGood runBad runInProgress.txt runFinished.txt out.txt diff* err* $(PROGRAM) 
	$(RM) -R -f workdir*

clean_test:
	$(RM) $(TEST_RESULTS) $(TEST_INTERMEDIATES) $(TEST_FLAGS) $(PROGRAM)
	$(RM) -R -f workdir*
	      

# Revert directory to its pristine condition
dist_clean:
	$(MAKE) clean_test


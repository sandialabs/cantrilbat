        <Shomate Pref="1 bar" Tmax="3000" Tmin="298">
          <floatArray size="7">
	     24.4800, 115.7000, 22.6900, 0, 0, -458.2417, 56.1202
<!--             24.4800,  115.7000,   22.6900,         0,         0,   -2.5417,   56.1202 -->
          </floatArray>
        </Shomate>
      </thermo>
      <density units="g/cm3"> 1.63709 </density>
    </species>

  </speciesData>


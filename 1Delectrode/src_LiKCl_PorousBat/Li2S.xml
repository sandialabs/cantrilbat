  <phase dim="3" id="Li2S(S)">
    <elementArray datasrc="elements.xml">
      Li S
    </elementArray>
    <speciesArray datasrc="#species_Li2S(S)"> Li2S(S) </speciesArray>
    <thermo model="StoichSubstance">
      <density units="g/cm3"> 1.63709 </density>
    </thermo>
    <!-- As of 6/11/2012 these are mostly guesses not actual values-->
    <transport model="Solid">
      <thermalConductivity model="coeffs" units="W/m/K">
        <floatArray size="2">  1.0, 5.0e-4 </floatArray>
      </thermalConductivity>
      <electricalConductivity model="Arrhenius" units="">
         <A>100.</A>
         <b>0.0</b>
         <E units="J/kmol">10000.</E>        
      </electricalConductivity>
      <defectActivity model="Constant">
         1e-4
      </defectActivity>
      <defectDiffusivity model="Arrhenius">
           <A units="m2/s">1.0</A>
           <b>0.0</b>
           <E units="J/kmol">90000.</E>
      </defectDiffusivity>
    </transport>
    <kinetics model="none"/>
  </phase>

 <!-- species definitions     -->
  <speciesData id="species_Li2S(S)">

    <!-- species Li2S(S)   -->
    <!--      melting temperature = 1463 K -->
    <species name="Li2S(S)">
      <atomArray> Li:2 S:1 </atomArray>
     <standardState  model="constant_incompressible">
        <molarVolume units="m3/kmol"> 0.01817 </molarVolume>
      </standardState>
      <!-- Morachevskii Russian J. of Applied Chem. 74(12) 2001 p 1934 (from Khachkuruzov) dH_298=-445.6, S_298=62-->

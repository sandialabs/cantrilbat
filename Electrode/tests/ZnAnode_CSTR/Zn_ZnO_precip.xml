<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   
  <!-- phase zinc_surface   -->
  <phase dim="2" id="ZnO_surface">
    <elementArray datasrc="elements.xml"> Zn O H </elementArray>
    <speciesArray datasrc="#species_ZnO"> zno_site </speciesArray>
  
    <state>
      <temperature units="K"> 300.0 </temperature>
      <coverages> zno_site:1.0 </coverages>
    </state>
    <thermo model="Surface">
      <!-- NOTE: This value appears to have no impact on the reaction rate. -->
      <site_density units="mol/cm2"> 3e-09 </site_density>
    </thermo>
    <kinetics model="Interface"/>
    <reactionArray datasrc="#data_ZnOPrecip"/>

    <transport model="None"/>
    <phaseArray> HMW_ZnKOH  ZnO(S) </phaseArray>
  </phase>

  <!-- species definitions     -->
  <speciesData id="species_ZnO">
   <!-- species zn_site   -->
    <species name="zno_site">
      <atomArray>  </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">298.15</t0>
           <h0 units="kJ/mol">0.0</h0>
           <s0 units="J/mol/K">0.0</s0>
           <cp0 units="J/mol/K">0.0</cp0>
        </const_cp>
      </thermo>
    </species>
  </speciesData>

 <reactionData id="data_ZnOPrecip">
  <!-- Lumped reaction on the Zinc electrode -->
    <reaction reversible="yes" type="surface" id="0001">
      <equation>  Zn(OH)4-- [=] ZnO(S) + H2O(L) + 2 OH- </equation>
      <rateCoeff>
        <Arrhenius>
          <!-- Original Duracell model had form R = a * K *(c-c_eq) with K = 5e-3 cm2/s
               The cantera rxn has the form R = a * K2 * exp(-dG/RT), for now we approximate
               K2 = K * c_0_zincate with c_0_zincate = 8.7179 mol/cm3 
               <A>4.359e-2</A> -->
           <!-- 1e-4 gives a good eyeball norm match of time scales with the original duracell model version -->
           <A>1e-4</A>
           <b>0.0</b>
           <E units="kJ/mol"> 20.000000 </E>
        </Arrhenius>
      </rateCoeff>
      <reactants> Zn(OH)4--:1.0  </reactants>
      <products> ZnO(S):1.0 H2O(L):1.0 OH-:2.0 </products>
    </reaction>
  </reactionData>

</ctml>

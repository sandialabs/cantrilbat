
<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>            
  <!-- phase sce_Electrode_surface

       In this example I try to formulate a reaction mechanism for
       an sce electrode. I actually have no idea how this works.
       Even the dimensionality or the location of phases eludes me,
       and I think eludes the common literature. 

       The goal here is to produce a rxn mechanism that has a 
       polarization curve. 

       I will assume that each electron is transfered via a single step.

    -->
  <phase dim="2" id="sce_surface">
    <elementArray datasrc="elements.xml"> Hg Cl </elementArray>
    <speciesArray datasrc="#species_sce_surface">  HgCl_site Hg*_site </speciesArray>
    <state>
      <temperature units="K"> 300.0 </temperature>
      <coverages> HgCl_site:0.6 Hg*_site:0.4 </coverages>
    </state>
    <thermo model="Surface">
      <site_density units="mol/cm2">3e-09</site_density>
    </thermo>
    <kinetics model="Electrode"/>
    <reactionArray datasrc="#reaction_data"/>

    <transport model="None"/>
    <phaseArray> 
        Metal_SHEelectrons 
        KCl_electrolyte 
        Mercury_liquid
        Calomel(S) 
    </phaseArray>
  </phase>

 
 <!-- species definitions     -->
  <speciesData id="species_sce_surface">


   <!-- species HgCl_site   -->
    <species name="HgCl_site">
      <atomArray> Hg:1 Cl:1 </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">     298.15</t0>
           <h0 units="kJ/mol">   -170.0</h0>
           <s0 units="J/mol/K">   10.0</s0>
           <cp0 units="J/mol/K">  10.0</cp0>
        </const_cp>
      </thermo>
    </species>

   <!-- species Hg*_site   -->
    <species name="Hg*_site">
      <atomArray>  </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">    298.15</t0>
           <h0 units="kJ/mol">  0.0</h0>
           <s0 units="J/mol/K"> 0.0</s0>
           <cp0 units="J/mol/K">0.0</cp0>
        </const_cp>
      </thermo>
    </species>

  </speciesData>

 <reactionData id="reaction_data">

  <!-- reaction 0001   
      rate limiting
    -->
    <reaction reversible="yes" type="surface" id="0001">
      <equation> Cl- + Hg(L) + Hg*_site [=] HgCl_site + she_electron </equation>
      <rateCoeff>
        <electrochem beta="0.5"/>
        <Arrhenius>
           <A>1.11800E+5</A>
           <b>0.0</b>
           <E units="kJ/mol"> 40.000000 </E>
        </Arrhenius>
      </rateCoeff>
      <reactants> Cl-:1.0   Hg(L):1.0 Hg*_site:1.0 </reactants>
      <products> HgCl_site:1.0 she_electron:1.0 </products>
    </reaction>

  <!-- reaction 0002
     fast
    -->
    <reaction reversible="yes" type="surface" id="0002">
      <equation> 2 HgCl_site [=]  2 Hg*_site + Hg2Cl2(S) </equation>
      <rateCoeff>
        <Arrhenius>
           <A>1.900000E+13</A>
           <b>0.0</b>
           <E units="kJ/mol"> 10.000000 </E>
        </Arrhenius>
      </rateCoeff>
      <reactants> HgCl_site:2.0  </reactants>
      <products> Hg*_site:2.0 Hg2Cl2(S):1.0 </products>
    </reaction>


  </reactionData>

</ctml>


<?xml version="1.0"?>
<!--
    KNaCl modeling Based on EQ3 database (as best as I can represent it)
    $Id: KCl_Solid_MEQ3.xml 5 2012-02-23 21:34:18Z hkmoffa $
  -->
<ctml>
  <validate reactions="yes" species="yes"/>
                   
 <!-- phase KCl(S)    -->
  <phase dim="3" id="KCl(S)">
    <elementArray datasrc="elements.xml">
       K Cl
    </elementArray>
    <speciesArray datasrc="#species_KCl(S)"> KCl(S) </speciesArray>
    <thermo model="MineralEQ3" />
    <transport model="None"/>
    <kinetics model="none"/>
  </phase>

 <!-- species definitions     -->
  <speciesData id="species_KCl(S)">


   <species name="KCl(S)">
      <atomArray> K:1 Cl:1 </atomArray>
      <charge> 0 </charge>
      <thermo model="MineralEQ3">
         <MinEQ3 Pref="1 bar" Tmax="1043." Tmin="200.">
           <DG0_f_Pr_Tr units="cal/gmol"> -97735 </DG0_f_Pr_Tr>
           <DH0_f_Pr_Tr units="cal/gmol"> -104370 </DH0_f_Pr_Tr>
           <S0_Pr_Tr units="cal/gmol/K">  19.73 </S0_Pr_Tr>
           <a units="cal/gmol/K">  9.89   </a>
           <b units="cal/gmol/K2"> 5.2E-3 </b>
           <c units="cal-K/gmol">  0.77E5 </c>
         </MinEQ3>
      </thermo>
      <standardState model="constantVolume">
        <V0_Pr_Tr units="cm3/gmol"> 37.524 </V0_Pr_Tr>       
      </standardState>
    </species>

  </speciesData>

</ctml>

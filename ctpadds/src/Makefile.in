#/bin/sh
#
#
RM = /bin/rm -f
CP = /bin/cp -f -p
AR = ar
RANLIB = ranlib
F77 = g77
FTCHECK = -u
F77MLDRFLAGS =
CMLDRFLAGS =
MPIHOME  = /usr/local/mpich
MPI_INC = -I$(MPIHOME)/include
MPI_LIB = -L/usr/local/mpich/lib -lmpich -lpmpich
#
# Setup The Zuzax Interface
ZUZAX_LIBDIR=@ct_libdir@

CT_TRANSPORT_LIBDEP=$(ZUZAX_LIBDIR)/libtransport.a

# The directory where Zuzax include files may be found.
CT_INCROOT=@ct_incroot@

# Bring in the Zuzax includes through the .mak file
include $(CT_INCROOT)/zuzax/Zuzax.mak

PURIFY=@PURIFY@

# Find the Build root for Zuzax
#
ZUZAX_BUILD_ROOT=@ctb_root@
#
UTILSRC_DIR=../../util_src/src


F2C_INC=$(CT_INCROOT)/zuzax
#
# Set up the various local and global defines
#
LDEFINES =   -DDEBUG -DDEBUG_HKM  -DCOMPILE_IN_ZUZAX_BUILDTREE
#
# Set up the global include directory macro

#
INCLUDE_DIRS = $(ZUZAX_TOTAL_INCLUDES) \
               -I$(UTILSRC_DIR) 

ALT_INCLUDE_DIRS = $(ZUZAX_TOTAL_INCLUDES) \
                   -I$(ZUZAX_BUILD_ROOT)/src/base \
                   -I$(ZUZAX_BUILD_ROOT)/src/numerics \
                   -I$(ZUZAX_BUILD_ROOT)/src/thermo \
                   -I$(ZUZAX_BUILD_ROOT)/src/kinetics 
#
# the C++ compiler
#
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@
LCXX_FLAGS = @LCXX_FLAGS@
LCXX_END_LIBS = @LCXX_END_LIBS@
CXXLDR = $(CXX)
#
# C compiler
#
CC = @CC@
CFLAGS = @CXXFLAGS@
#
# Both the C and C++ compiler predefines
#
CCFLAGS =  $(GDEFINES) $(INCLUDE_DIRS) $(LDEFINES) 
CCALTFLAGS = $(GDEFINES) $(ALT_INCLUDE_DIRS) $(LDEFINES) 
#
CF77LDR =  @F77@
CLIBS    = -lm
AR       = ar
RANLIB   = echo
F77      = @F77@
F77LDR  =  $(F77)
#
# C and CXX Loader flags to be used when a CXX main program
# is linked with fortran libraries or object files.
# -> Key issue is fortran IO
#
CLDRF77LIBS = @FLIBS@
FXX = @F77@
FFLAGS_BSD   =
FLIB_BSD     =
GPROF    = -G

LIBTAR = @cta_libdir@/libctpadds.a

all: .depends libctpadds.a $(OBJS_UNUSED)

.SUFFIXES: .src .prj .d

.cpp.o:
	$(PURIFY) $(CXX) $(CXXFLAGS) $(CCFLAGS) -c $<

# 
# These classes compile against the Zuzax kernel
# format
#

importAllCTML.o: importAllCTML.cpp importAllCTML.h
	$(PURIFY) $(CXX) $(CXXFLAGS) $(CCALTFLAGS) -c $<

#SolidKinetics.o: SolidKinetics.cpp SolidKinetics.h

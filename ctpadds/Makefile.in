#/bin/sh

all:
	cd src;                       $(MAKE)
	cd tests;                     $(MAKE) 

test:
	cd tests;                 $(MAKE) -s test

clean:
	cd src;                      $(RM) .depends ; $(MAKE) clean
	cd tests;                                     $(MAKE) clean

depends:
	cd src; $(MAKE) depends
	cd tests; $(MAKE) depends

install:
	cd src; $(MAKE) install

# end of file


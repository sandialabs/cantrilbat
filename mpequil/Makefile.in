build_python=@BUILD_PYTHON@

all:
	cd src; @MAKE@
	cd tests; @MAKE@
	cd failures; @MAKE@

allsrc:
	cd src; @MAKE@

test:
	cd tests; @MAKE@ -s test

testd:
	cd tests; @MAKE@ -s testd

clean:
	cd src; $(RM) .depends ; @MAKE@ clean
	cd tests;  @MAKE@ clean
	cd failures;  @MAKE@ clean

depends:
	cd src; @MAKE@ depends
	cd tests; @MAKE@ depends
	cd failures; @MAKE@ depends

install:
	cd src; @MAKE@ install


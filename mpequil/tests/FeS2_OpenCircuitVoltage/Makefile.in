RM = /bin/rm -f

PROG = FeS2_OpenCircuitVoltage

OBJ = $(PROG).o
#
##########################################################################
#           Setup The Cantera Directory locations
#########################################################################
#
# The directory where Cantera include files may be found.
#
CANTERA_INCROOT=@ct_incroot@
#
include $(CANTERA_INCROOT)/cantera/Cantera.mak
#
CADS_ROOT=@cads_root@
CADS_UTILSRC_DIR=$(CADS_ROOT)/util_src
#
# Set up the various local and global defines
#
LDEFINES = -DDEBUG  -DDEBUG_TEST
#
# Set up the global include directory macro
#
INCLUDE_DIRS = -I../../src $(CANTERA_TOTAL_INCLUDES) \
               -I$(CADS_UTILSRC_DIR) 
#
# the C++ compiler
#
CXX = @CXX@

debug_mode = 0
ifeq ($(debug_mode), 1)
   DEBUG_FLAG=-DDEBUG_MODE
else
   DEBUG_FLAG=
endif

CXXFLAGS = @CXXFLAGS@ $(DEBUG_FLAG)
LCXX_FLAGS = @LCXX_FLAGS@
LCXX_END_LIBS = @LCXX_END_LIBS@
CXXLDR = $(CXX)
CFLAGS=@CXXFLAGS@
#
# Both the C and C++ compiler predefines
#
CCFLAGS =   $(LDEFINES) $(INCLUDE_DIRS) 
######################################################################

all: .depends $(PROG)

######################################################################

.SUFFIXES: .src  .d .cpp

.cpp.o:
	$(CXX) $(CXXFLAGS) $(CCFLAGS) -c $<
# 
# These classes compile against the Cantera kernel
# format
#
SRCDIR=../../src

MDPLIB_DEP = $(CADS_UTILSRC_DIR)/libutil_src.a
MDPLIB     = -L$(CADS_UTILSRC_DIR) -lutil_src

###########################################################################
# section to set up depends
###########################################################################
DEPENDS =   $(PROG).d

.cpp.d:
	@CXX_DEPENDS@ $(CXXFLAGS) $(CCFLAGS) -c $*.cpp > $*.d

.depends: $(DEPENDS)
	cat *.d > .depends

depends:
	$(RM) *.d .depends
	@MAKE@ .depends
#
############################################################################
############################################################################
#
$(PROG).d: $(PROG).cpp

$(PROG): $(OBJ)  $(CANTERA_CORE_LIBS_DEP) 
	$(CXXLDR) $(LCXX_FLAGS) $(FLIB_BSD) -o $(PROG) \
                  $(OBJ)  $(CANTERA_TOTAL_LIBS) $(LCXX_END_LIBS) 

test:
	@ ./runtest

###########################################################################
#          INSTALL RULES
###########################################################################

ifeq ($(wildcard .depends), .depends)
include .depends
endif

install:

rebaseline:
	cp ocvOutput.csv ocvOutput_blessed.csv
	cp out.txt good_out.txt

clean:
	$(RM) *.o   fort.* *%  core *.trace tmp* *~ $(PROG) diff* out.txt dout.txt vcs_equil*csv .depends *.d


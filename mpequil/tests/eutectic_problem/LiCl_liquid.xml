
<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   
 <!-- phase LiCl(L)    -->
  <!--
     HKM Entered manually from NIST webbook.
     density is the solid compound density of 2.07 g cm3 (wikipedia)
           I haven't found a source for the liquid density yet.
     MW = 42.394 gm mol-1
     Melting point 883 K. (wikipedia -> 878 K)
    -->
  <phase dim="3" id="LiCl(L)">
    <elementArray datasrc="elements.xml">
       Li Cl
    </elementArray>
    <speciesArray datasrc="#species_LiCl(L)"> LiCl(L) </speciesArray>
    <thermo model="StoichSubstance">
      <density units="g/cm3"> 2.07 </density>
    </thermo>
    <transport model="None"/>
    <kinetics model="none"/>
  </phase>


.SUFFIXES: .d

##########################################################################
#           Setup The Zuzax Directory locations
#########################################################################
#
# These links are to Cantera's install space
CT_INCROOT =  @ct_incroot@

# Bring in the Zuzax includes through the .mak file
include $(CT_INCROOT)/zuzax/Zuzax.mak

# Utility src directory
UTILSRC_DIR=../../util_src/src
UTILSRC_DEP = $(UTILSRC_DIR)/libutil_src.a
UTILSRC     = -L$(UTILSRC_DIR) -lutil_src
#
#########################################################################
# Set up the various local and global defines
########################################################################

PURIFY=@PURIFY@
#
LDEFINES = -DDEBUG 
GDEFINES =
#
# Set up the global include directory macro
#
INCLUDE_DIRS = $(ZUZAX_TOTAL_INCLUDES) -I$(UTILSRC_DIR)

all: .depends mpequil

LDR = $(F77LDR)
LDRFLAGS = $(F77LDRFLAGS)
LDRFLAGS_DEBUG = -g -y $(FFLAGS_BSD)

CCFLAGS =   $(LDEFINES) $(INCLUDE_DIRS) $(GDEFINES)

OBJ_MPEQUIL= mpequil_main.o mpequil_input.o mpequil_prep.o

OBJ_ZUZAX_ADDONS =  importAllPhases.o

############################################################################
# section to set up compiler rules
###########################################################################
#
# the C++ compiler
#
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@
LCXX_FLAGS = @LCXX_FLAGS@
LCXX_END_LIBS = @LCXX_END_LIBS@
CXXLDR = $(CXX)
#
# C compiler
#
CC = @CC@
CFLAGS = @CXXFLAGS@
#
# Both the C and C++ compiler predefines
#
CCFLAGS =  $(GDEFINES) $(INCLUDE_DIRS) $(LDEFINES) 
#
.cpp.o:
	$(PURIFY) $(CXX) $(CXXFLAGS) $(CCFLAGS) -c $<

############################################################################
# section to set up depends
###########################################################################

DEPENDS = $(OBJ_MPEQUIL:.o=.d) $(OBJ_ZUZAX_ADDONS:.o=.d)

.cpp.d:
	@CXX_DEPENDS@ $(CXXFLAGS) $(CCFLAGS) -c $*.cpp > $*.d

depends:
	$(RM) $(DEPENDS)
	$(MAKE) .depends

.depends: $(DEPENDS)
	cat *.d > .depends

mpequil: $(OBJ_MPEQUIL) $(OBJ_ZUZAX_ADDONS) $(UTILSRC_DEP) \
         $(ZUZAX_CORE_LIBS_DEP)
	$(PURIFY) $(CXXLDR) $(LCXX_FLAGS) -o mpequil $(OBJ_MPEQUIL) \
	          $(OBJ_ZUZAX_ADDONS) $(UTILSRC) $(ZUZAX_TOTAL_LIBS) \
                  $(LCXX_END_LIBS) 

$(OBJ_MPEQUIL) $(OBJ_ZUZAX_ADDONS): Makefile

$(DEPENDS): Makefile

clean:
	$(RM) *.o  .depends
	$(RM) ${PROG} 

install:
	$(MAKE) all
	@INSTALL@ -d @cta_bindir@
	@INSTALL@ -c mpequil @cta_bindir@

#############################################################################
#          DEPENDS RULES
##############################################################################

ifeq ($(wildcard .depends), .depends)
include .depends
endif



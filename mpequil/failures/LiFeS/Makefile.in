#
#  Makefile.in: 
#     Makefile for  phaseDiagram
#
# $Id: Makefile.in,v 1.2 2010/06/29 18:56:42 hkmoffa Exp $
#
#
RM = /bin/rm -f
#
##########################################################################
#           Setup The Zuzax Directory locations
#########################################################################
#
# The directory where Zuzax include files may be found.
#
ZUZAX_INCROOT=@ct_incroot@
#
include $(ZUZAX_INCROOT)/zuzax/Zuzax.mak
#
CADS_ROOT=@cads_root@
CADS_UTILSRC_DIR=$(CADS_ROOT)/util_src
#
# Set up the various local and global defines
#
LDEFINES = -DDEBUG  -DDEBUG_TEST
#
# Set up the global include directory macro
#
INCLUDE_DIRS = -I../../src $(ZUZAX_TOTAL_INCLUDES) \
               -I$(CADS_UTILSRC_DIR) 
#
# the C++ compiler
#
CXX = @CXX@

debug_mode = 0
ifeq ($(debug_mode), 1)
   DEBUG_FLAG=-DDEBUG_MODE
else
   DEBUG_FLAG=
endif

CXXFLAGS = @CXXFLAGS@ $(DEBUG_FLAG)
LCXX_FLAGS = @LCXX_FLAGS@
LCXX_END_LIBS = @LCXX_END_LIBS@
CXXLDR = $(CXX)
CFLAGS=@CXXFLAGS@
#
# Both the C and C++ compiler predefines
#
CCFLAGS =   $(LDEFINES) $(INCLUDE_DIRS) 
######################################################################

all: .depends phaseDiagram 

######################################################################

.SUFFIXES: .src  .d .cpp

.cpp.o:
	$(CXX) $(CXXFLAGS) $(CCFLAGS) -c $<
# 
# These classes compile against the Zuzax kernel
# format
#
SRCDIR=../../src

MDPLIB_DEP = $(CADS_UTILSRC_DIR)/libutil_src.a
MDPLIB     = -L$(CADS_UTILSRC_DIR) -lutil_src

###########################################################################
# section to set up depends
###########################################################################
DEPENDS =   phaseDiagram.d

.cpp.d:
	@CXX_DEPENDS@ $(CXXFLAGS) $(CCFLAGS) -c $*.cpp > $*.d

.depends: $(DEPENDS)
	cat *.d > .depends

depends:
	$(RM) *.d .depends
	@MAKE@ .depends
#
############################################################################
############################################################################
#
phaseDiagram.d: phaseDiagram.cpp

phaseDiagram: phaseDiagram.o  $(ZUZAX_CORE_LIBS_DEP) 
	$(CXXLDR) $(LCXX_FLAGS) $(FLIB_BSD) -o phaseDiagram \
                  phaseDiagram.o \
                  $(ZUZAX_TOTAL_LIBS)\
                  $(LCXX_END_LIBS) 

test:
	@ ./runtest

###########################################################################
#          INSTALL RULES
###########################################################################

ifeq ($(wildcard .depends), .depends)
include .depends
endif

install:

clean:
	$(RM) *.o   fort.* *%  core *.trace tmp* *~ phaseDiagram *.d .depends


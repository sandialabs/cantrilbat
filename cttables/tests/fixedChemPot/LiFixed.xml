<?xml version="1.0"?>
<!--
    KNaCl modeling Based on EQ3 database (as best as I can represent it)
    $Id: LiFixed.xml 5 2012-02-23 21:34:18Z hkmoffa $
  -->
<ctml>
  <validate reactions="yes" species="yes"/>

 <!-- phase NaCl(S)    -->
  <phase dim="3" id="LiFixed">
    <elementArray datasrc="elements.xml">
        Li
    </elementArray>
    <speciesArray datasrc="#species_Li(Fixed)"> 
       LiFixed
    </speciesArray>
    <thermo model="FixedChemPot">
      <chemicalPotential units="J/kmol"> -2.3E7  </chemicalPotential>
    </thermo>
    <transport model="None"/>
    <kinetics model="none"/>
    <state>
         <temperature> 1000.0 </temperature>
         <pressure> 100000. </pressure>
    </state>
  </phase>

 <!-- species definitions     -->
  <speciesData id="species_Li(Fixed)">

  
    <species name="LiFixed">
      <atomArray> Li:1 </atomArray>
      <standardState model="constantVolume">
          <molarVolume> 0.0 </molarVolume>
      </standardState>
      <thermo>
        <const_cp  Pref="1 bar" Tmax="1075.0" Tmin="250.0">
           <t0 units="K"> 1000. </t0>
           <h0 units="kJ/mol">  -2.3E1  </h0>
           <s0 units="J/mol/K">  0.0  </s0>
           <cp0 units="J/mol/K"> 0.0 </cp0>
        </const_cp>
      </thermo>
    </species>

  </speciesData>

</ctml>




<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   
 <!-- phase KLiCl(L)    -->
  <!--
         Ok, the eutectic is measured to be X_b = X_LiCl = 0.595
         and 355 C = 628.15
    -->
  <phase dim="3" id="LiKCl_electrolyte">
    <elementArray datasrc="elements.xml">
       Li K Cl
    </elementArray>
    <speciesArray datasrc="#species_MoltenSalt"> 
        Li+ K+ Cl-
    </speciesArray>
    <thermo model="IonsFromNeutralMolecule">
      <standardConc model="constant_volume" />
        <neutralMoleculePhase datasrc="LiKCl_Margules_trans.xml#LiKCl_Margules" />
	<activityCoefficients model="IonFromNeutral" TempModel="constant">
	  <specialSpecies> Cl-  </specialSpecies>
	  <secondSpecialSpecies> Li+ </secondSpecialSpecies>
	  <scalingConvention model="constantIonValue">
	    <ion> Cl- </ion>
	    <value> 0.0 </value> 
	    <autoSatisfaction> 1 </autoSatisfaction>
          </scalingConvention>
	  
       </activityCoefficients>
    </thermo>
    <transport model="Liquid">
       <viscosity>
          <compositionDependence model="logMoleFractions">
             <interaction speciesA="Li+" speciesB="K+">
	         <!-- 
	           interactions are from speciesA = LiCl(L)
		   and speciesB = KCl(L).
                   -->
                <Eij units="J/kmol"> -1.0e3 </Eij>
                <Sij units="J/kmol/K"> 80.0e-5 </Sij>
             </interaction>
          </compositionDependence>          
       </viscosity>
       <thermalConductivity>
          <compositionDependence model="massFractions"/>
       </thermalConductivity>
       <hydrodynamicRadius>
          <compositionDependence model="none"/>
       </hydrodynamicRadius>
       <speciesDiffusivity>
          <compositionDependence model="pairwiseInteraction">
             <interaction speciesA="Li+" speciesB="Cl-">
                <Dij units="m/s"> 0.25e-8 </Dij>
             </interaction>
             <interaction speciesA="K+" speciesB="Cl-">
                <Dij units="m/s"> 0.4e-8 </Dij>
             </interaction>
             <interaction speciesA="Li+" speciesB="K+">
                <Dij units="m/s"> 0.8e-8 </Dij>
             </interaction>
          </compositionDependence>          
       </speciesDiffusivity>
    </transport>     
    <kinetics model="none"/>
    <state>
      <temperature  units="K"> 725.0 </temperature>
       <pressure units="atm"> 1.0 </pressure>
       <moleFractions> Li+:0.5 Cl-:0.5 </moleFractions> 
    </state>
  </phase>

 <!-- species definitions     -->
  <speciesData id="species_MoltenSalt">

    <species name="Li+">
      <atomArray> Li:1 </atomArray>
      <charge> 1 </charge>
      <standardState model="IonFromNeutral" />

      <thermo model="IonFromNeutral">
        <secondSpecialSpecies/>
        <neutralSpeciesMultipliers> 
            LiCl(L):1
        </neutralSpeciesMultipliers>
      </thermo>
      <transport>
        <hydrodynamicRadius model="Constant" units="A">
            1.000
        </hydrodynamicRadius>
        <viscosity model="Arrhenius">
	   <!-- moles of Li+ represent Li+ and Cl- from LiCL properties -->
	   <mixtureWeighting> 2.0 </mixtureWeighting>
           <!-- Janz, JPCRD, 17, supplement 2, 1988 -->
           <A>6.578e-5</A>
           <b>0.0</b>
           <E units="J/kmol">23788.e3</E>
        </viscosity>
        <thermalConductivity model="coeffs">
           <floatArray size="2">  0.6, -15.0e-5 </floatArray>
        </thermalConductivity>
      </transport> 
    </species>

    <species name="K+">
      <atomArray> K:1 </atomArray>
      <charge> 1 </charge>
      <standardState model="IonFromNeutral" />
      <thermo model="IonFromNeutral">
        <neutralSpeciesMultipliers> 
            KCl(L):1
        </neutralSpeciesMultipliers>
      </thermo>
      <transport>
        <hydrodynamicRadius model="Constant" units="A">
            2.000
        </hydrodynamicRadius>
        <viscosity model="Arrhenius">
	   <!-- moles of K+ represent K+ and Cl- from KCL properties -->
	   <mixtureWeighting> 2.0 </mixtureWeighting>
           <!-- Janz, JPCRD, 17, supplement 2, 1988 -->
           <A>5.727E-5</A>
           <b>0.0</b>
           <E units="J/kmol">26273e3.</E>
        </viscosity>
        <thermalConductivity model="coeffs">
           <floatArray size="2">  0.5, -5.0e-5 </floatArray>
        </thermalConductivity>
      </transport> 
    </species>

    <species name="Cl-">
      <atomArray> Cl:1 </atomArray>
      <charge> -1 </charge>
      <standardState model="IonFromNeutral" />
      <thermo model="IonFromNeutral">
        <specialSpecies/>
        <neutralSpeciesMultipliers> 
            LiCl(L):0
        </neutralSpeciesMultipliers>
      </thermo>
      <transport>
        <hydrodynamicRadius model="Constant" units="A">
            1.000
        </hydrodynamicRadius>
        <viscosity model="Constant"> 1.0
	   <!-- 
	       moles of Cl- represented by K+ and Li+ 
	       from KCL and LiCl properties 
	     -->
	   <mixtureWeighting> 0.0 </mixtureWeighting>
        </viscosity>
        <thermalConductivity model="coeffs">
           <floatArray size="2">  0.6, -15.0e-5 </floatArray>
        </thermalConductivity>
      </transport> 
    </species>

  </speciesData>

</ctml>

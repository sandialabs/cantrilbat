
<?xml version="1.0"?>
<ctml>
  <validate reactions="yes" species="yes"/>
                   
  <!-- phase zinc_surface   -->
  <phase dim="2" id="zinc_surface">
    <elementArray datasrc="elements.xml"> Zn E </elementArray>
    <speciesArray datasrc="#species_Znelectrode"> zn_site </speciesArray>
  
    <state>
      <temperature units="K"> 300.0 </temperature>
      <coverages> zn_site:1.0 </coverages>
    </state>
    <thermo model="Surface">
      <site_density units="mol/cm2"> 3e-09 </site_density>
    </thermo>
    <kinetics model="Interface"/>
    <reactionArray datasrc="#data_ZnElectrode"/>

    <transport model="None"/>
    <phaseArray> metalElectrons ZnSO4_electrolyte Zn(S) </phaseArray>
  </phase>


 <!-- species definitions     -->
  <speciesData id="species_Znelectrode">


   <!-- species zn_site   -->
    <species name="zn_site">
      <atomArray>  </atomArray>
      <thermo>
        <const_cp Tmax="5000.0" Tmin="100.0">
           <t0 units="K">298.15</t0>
           <h0 units="kJ/mol">0.0</h0>
           <s0 units="J/mol/K">0.0</s0>
           <cp0 units="J/mol/K">0.0</cp0>
        </const_cp>
      </thermo>
    </species>

  </speciesData>

 <reactionData id="data_ZnElectrode">

  <!--
       Lumped reaction on the Zinc electrode
    -->
    <reaction reversible="yes" type="surface" id="0001">
      <equation> Zn(S) [=] Zn++  + 2 electronSHE </equation>
      <rateCoeff>
        <electrochem beta="0.5"/>
        <Arrhenius>
           <A>1.11800E+9</A>
           <b>0.0</b>
           <E units="kJ/mol"> 20.000000 </E>
        </Arrhenius>
      </rateCoeff>
      <reactants> Zn(S):1.0 </reactants>
      <products> Zn++:1.0  electronSHE:2.0  </products>
    </reaction>


  </reactionData>

</ctml>
